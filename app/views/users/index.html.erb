  <%= form_tag users_path, method: :get do %>
    <%= text_field_tag :query, params[:query], class: "", placeholder: "Search Profiles" %>
  <% end %>
  <%= render 'shared/tabs' %>
  <% @users.each do |user| %>
  <div class="card mt-3">
    <%= link_to(user) do %>
      <div class="card-text">
        <div class="avatar-square" style="
            background-image:
            url('<%= user.photo %>');
          ">
        </div>
        <h3><%= user.username %></h3>
        <p><%= user.email %></p>
        <p>admin: <%= user.admin %></p>
      </div>
    <% end %>
  </div>
<% end %>
</div>
