<div class="container">
  <%= form_tag events_path, method: :get do %>
    <%= text_field_tag :query, params[:query], class: "", placeholder: "Search Events" %>
    <!-- <#%= submit_tag "events", class: "", name: "events" %> -->
    <!-- <#%= submit_tag "past", class: "", name: "past" %> -->
  <% end %>
 <%= render 'shared/tabs' %>
  <% @events.each do |event| %>
    <div class="card">
      <%= link_to(event) do %>
        <div class="card-text">
          <h3><%= event.title %></h3>
          <p><%= event.descript_limit %></p>
          <p><%= event.date_format %> <%= "- #{event.end_date_format}" if event.end_date.nil? == false %></p>
          <p>time: <%= event.time %></p>
          <p><%= event.venue.name %> </p>
          <p><%= event.venue.city %>
            <%= ", #{event.venue.state}" if event.venue.state.nil? == false %>
            <%= ", #{event.venue.country}" %></p>
          <p><%= event.venue.info %> </p>
          <p><%= "This event is over" if event.past %></p>
        </div>
      <% end %>
      <%= link_to 'save event', event_saved_events_path(event), method: :post %>
    </div>
  <% end %>

</div>


