<div class="container">
  <!-- <#%= link_to 'profiles', users_index_path %> -->
  <% Event.order('created_at DESC') %>
  <% @events.each do |event| %>
    <div class="card">
      <%= link_to(event) do %>
        <div class="card-text">
          <h2><%= event.title %></h2>
          <p><%= event.descript_limit %></p>
          <p><%= event.date %> <%= "- #{event.end_date}" if event.end_date.nil? == false %></p>
          <p>time: <%= event.time %></p>
          <p><%= event.venue.name %> </p>
          <p><%= event.venue.city %>, <%= event.venue.state %> <%= event.venue.country %> </p>
          <p><%= event.venue.info %> </p>
        </div>
      <% end %>
      <%= link_to 'save event', event_saved_events_path(event), method: :post %>
    </div>
  <% end %>
</div>


