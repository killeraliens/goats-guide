<h2>Create Event</h2>
<%= simple_form_for @event do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.date_field :date %>
  </div>

  <%= simple_form_for @venue do |f| %>
    <div class="form-inputs">
      <%= f.input :name, error: "This venue has an event for your date already" %>
      <%= f.input :country, as: :string, id: "goats"  %>
      <%= f.input :state %>
      <%= f.input :city %>
      <%= f.input :street %>
      <%= f.input :info %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Create Event" %>
    </div>
  <% end %>
<% end %>

