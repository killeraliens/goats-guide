<%= render "shared/tabs" %>
<div class="row mt-3" style="flex-direction: row-reverse; ">
  <div class="col-sm-12 col-md-4">
    <div class="card-banner-image card-show-image" style="
        background-image: linear-gradient(120deg, rgba(0,0,0,0.8), rgba(0,0,0,0.6)),
        url('<%= @event.photo %>');">
    </div>
  </div>
  <div class="col-sm-12 col-md-8">
    <div class="card-show-text text-center">
      <h2><%= @event.title %></h2>
      <p><%= @event.description %></p>

      <span class ="card-date"><%= @event.date_format %>
                    <%= "- #{event.end_date_format}" if !@event.end_date.nil? && @event.end_date != @event.date %>
                  </span>
      <p><%= @event.creator.username if @event.creator %>
      <p><%= @event.venue.name %> </p>
      <p><%= @results %></p>

    </div>

  </div>
</div>

